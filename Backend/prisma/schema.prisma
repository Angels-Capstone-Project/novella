generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
id           String  @id @default(uuid())
email      String  @unique
username   String  @unique
password     String
bio         String?
stories     Story[] 
comments   Comment[]
createdAt    DateTime  @default(now())
}

model Story {
id     String    @id   @default(uuid())
title    String
description   String?
content   String
genre   String
coverImage    String?
author   User   @relation(fields: [authorId], references: [id])
authorId   String
createdAt  DateTime  @default(now())
updatedAt  DateTime  @updatedAt
comments   Comment[]
}

model Comment {
id   String   @id @default(uuid())
text   String
author  User    @relation(fields: [authorId], references: [id])
authorId   String
story   Story    @relation(fields: [storyId], references: [id])
storyId   String
createdAt   DateTime   @default(now())
}

